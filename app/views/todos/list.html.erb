<div class="container">
  <h1>Listado de descripciones</h1>
  <div class="row">
    <div class="col-md-6">
      <h3>Descripciones completadas</h3><br>
        <% @todos1.each do |todo|%>
          <ul class="list-group">
            <li class="list-group-item-info"><%=todo.description%></li>
          </ul>
        <% end %>
      </div>
      <div class="col-md-6">
        <h3>Descripciones sin completar</h3><br>
          <% @todos2.each do |todo|%>
            <ul class="list-group">
              <li class="list-group-item-danger"> <%=todo.description%></li>
            </ul>
          <% end %>
      </div>
    </div>
 </div>
